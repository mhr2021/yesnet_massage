<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/recever"
        android:maxWidth="310dp"
        android:maxHeight="400dp"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:gravity="start"
            android:text="@Mahmudul Hasan"
            android:textAlignment="textStart"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/reciver_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:minWidth="100dp"
            android:minHeight="0dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
           />

        <TextView
            android:id="@+id/reciver_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:focusable="auto"
            android:inputType="textLongMessage|textMultiLine"
            android:maxWidth="270dp"
            android:minWidth="50dp"
            android:padding="10dp"
            android:selectAllOnFocus="false"
            android:text="Massassssssssssssssssssssssssssscccccccccccccccccccccccccccccccccccccccccccssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssge"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textIsSelectable="false"
            tools:ignore="TextViewEdits" />

        <TextView
            android:id="@+id/reciver_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sender_sms"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/sender_sms"
            android:padding="10dp"
            android:text="Time"
            android:textColor="#000000"
            android:textSize="10dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout><!--<?xml version="1.0" encoding="utf-8"?>-->
