<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fregments.addFriends">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:weightSum="10"
    android:id="@+id/layout_scr_friend"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="0dp"
        android:layout_weight="8"
        android:hint="Enter Your Friends Phone Number"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:background="@color/white"
        android:id="@+id/addfriend_eacrc_edittext"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_width="0dp"
        android:padding="10dp"
        android:layout_weight="2"
        android:id="@+id/addfriend_eacrc_imageButton"
        android:src="@drawable/ic_baseline_person_search_24"
        android:layout_height="match_parent"/>
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_friends_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/requested_friend"
        android:layout_alignParentBottom="true"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/requested_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_scr_friend"
        android:layout_alignEnd="@id/layout_scr_friend"
        android:layout_marginEnd="20dp"
        android:background="#4CAF50"
        android:padding="5dp"
        android:text="@string/requested_friend"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_scr_friend"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:padding="5dp"
        android:text="Friends"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:visibility="gone" />

</RelativeLayout>