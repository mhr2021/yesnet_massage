<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fregments.Counselling">


    <ImageView
        android:id="@+id/ic_baseline_announcement_24"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_announcement_24" />

    <TextView
        android:id="@+id/ic_baseline_announcement_24_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_baseline_announcement_24"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.3"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="No Chats Found !\nadd your Friends"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/see_more_chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="See more History"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_above="@id/see_more_chats"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>